<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="#fff"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F4BB2E">
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/back"
            android:scaleType="fitCenter"
            android:background="#0000"/>
        <TextView
            android:id="@+id/headerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名前名前名前名前名前名前名前名前名前名前"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:maxLines="1"/>
        <ImageButton
            android:id="@+id/messageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/message"
            android:scaleType="fitCenter"
            android:background="#0000"
            android:layout_gravity="right"/>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/no_image"
                android:scaleType="centerCrop"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"/>
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="名前名前名前名前名前名前名前名前名前"
                android:textSize="18dp"
                android:textColor="#363636"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="パートナーさん募集中"
                android:textSize="15dp"
                android:textColor="#363636"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最終ログイン："
                    android:textSize="12dp"
                    android:textColor="#363636"/>
                <TextView
                    android:id="@+id/loginDatetimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2時間前"
                    android:textSize="12dp"
                    android:textColor="#363636"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="居住エリア"
                    android:textColor="#825D2B"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/areaTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="東京"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="会員区分"
                    android:textColor="#825D2B"
                    android:textSize="14dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="クライアント"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:maxLines="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/messageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！こんにちは！"
                android:textColor="#363636"
                android:textSize="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                android:layout_marginTop="30dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F9B846">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ご利用見込みについて"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月間のご利用見込み数："
                    android:textSize="14dp"
                    android:textColor="#825D2B"/>
                <TextView
                    android:id="@+id/useFrequencyTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="500〜999個"
                    android:textSize="14dp"
                    android:textColor="#363636"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F9B846">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="お取り扱い商品のコンディション"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新品："
                        android:textSize="14dp"
                        android:textColor="#825D2B"/>
                    <TextView
                        android:id="@+id/newConditionTextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="70%"
                        android:textSize="14dp"
                        android:textColor="#363636"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中古："
                        android:textSize="14dp"
                        android:textColor="#825D2B"/>
                    <TextView
                        android:id="@+id/oldConditionTextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="30%"
                        android:textSize="14dp"
                        android:textColor="#363636"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F9B846">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="お取り扱い商品のジャンル"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/genreTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ドラッグストア・ビューティ・服"
                android:textSize="14dp"
                android:textColor="#363636"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#ededed"
                android:layout_marginTop="20dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#F9B846">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="追加オプションについて"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>
            </FrameLayout>
            <TextView
                android:id="@+id/optionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SKU設定希望\n危険物商品あり"
                android:textSize="14dp"
                android:textColor="#363636"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="40dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>